<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/background_color"
    tools:context=".layouts.SoldeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_header"
        android:background="@color/purple_700">

        <ImageView
            android:id="@+id/solde_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?actionBarItemBackground"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:src="@drawable/ic_back"
            app:tint="@color/black_acsent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="@dimen/_15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_direct" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consulter mon solde"
        android:fontFamily="@font/myriadpro_bold"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/header"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10dp"
        app:cardElevation="1dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/solde_mtn"
                android:background="@drawable/mtn_btn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_15dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_phone_tel"
                    android:padding="@dimen/_10dp"
                    android:scaleType="centerInside"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_acsent"
                    android:textSize="16sp"
                    android:fontFamily="@font/myriadpro_bold"
                    android:text="Consulter mon solde MoMo"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/solde_airtel"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/airtel_btn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_15dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_phone_tel"
                    android:padding="@dimen/_10dp"
                    android:scaleType="centerInside"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_acsent"
                    android:textSize="16sp"
                    android:fontFamily="@font/myriadpro_bold"
                    android:text="Consulter mon solde AM"/>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>