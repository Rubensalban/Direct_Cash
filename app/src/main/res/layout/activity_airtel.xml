<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".airtel.AirtelActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:scaleType="fitXY"
        android:layout_below="@id/imageView"
        app:srcCompat="@drawable/separator_line" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/imageView2"
        app:srcCompat="@drawable/network_icon" />

    <customfonts.MyTextView_Bold
        android:id="@+id/myTextView_Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/imageView3"
        android:text="@string/zero_frais"
        android:textAlignment="center"
        android:textColor="@color/black_acsent"
        android:textSize="12sp" />

    <ScrollView
        android:layout_above="@id/footer_airtel"
        android:layout_below="@id/myTextView_Regular"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/airte_tel_destinataire"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle_edit"
                android:hint="Numéro de téléphone du destinataire..."
                android:inputType="number"
                android:maxLines="1"
                android:padding="4dp"
                android:textSize="15sp"
                android:textAlignment="textStart"
                android:textColor="@color/black_acsent"
                android:textColorHint="@color/black_acsent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myTextView_Regular" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/airtel_tel_prix"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_edit"
                android:hint="Montant à envoyer..."
                android:inputType="number"
                android:maxLines="1"
                android:padding="4dp"
                android:textSize="15sp"
                android:textAlignment="textStart"
                android:textColor="@color/black_acsent"
                android:textColorHint="@color/black_acsent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/airtel_confirm_tel_destination"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rectangle_edit"
                android:hint="Comfirmer le numéro de téléphone du destinataire..."
                android:inputType="number"
                android:maxLines="1"
                android:padding="4dp"
                android:textSize="15sp"
                android:textAlignment="textStart"
                android:textColor="@color/black_acsent"
                android:textColorHint="@color/black_acsent" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <customfonts.MyButton_Bold
                    android:id="@+id/btn_airtel_v"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/purple_700"
                    android:text="@string/valider"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <customfonts.MyButton_Bold
                    android:id="@+id/btn_airtel_cancel"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/black_acsent"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:text="@string/annuler"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/icon_tel" />

                <customfonts.MyTextView_Regular
                    android:id="@+id/text_airtel"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:text="@string/service_client"
                    android:textColor="@color/black_acsent"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/footer_airtel"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/maji_logo"/>
</RelativeLayout>
